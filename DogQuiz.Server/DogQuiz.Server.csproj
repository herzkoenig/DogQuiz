<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <SpaRoot>..\dogquiz.client</SpaRoot>
    <SpaProxyLaunchCommand>npm start</SpaProxyLaunchCommand>
    <SpaProxyServerUrl>https://localhost:4200</SpaProxyServerUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.SpaProxy">
      <Version>8.*-*</Version>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.10" />
    <PackageReference Include="Riok.Mapperly" Version="4.1.0" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.9.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\dogquiz.client\dogquiz.client.esproj">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Images\Breeds\GoldenRetriever\" />
    <Folder Include="Images\Breeds\FrenchBulldog\" />
    <Folder Include="Images\Breeds\GermanShorthairedPointer\" />
    <Folder Include="Images\Breeds\Beagle\" />
    <Folder Include="Images\Breeds\Corgi\" />
    <Folder Include="Images\Breeds\Akita\" />
    <Folder Include="Images\Breeds\JackRusselTerrier\" />
    <Folder Include="Images\Breeds\LabradorRetriever\" />
    <Folder Include="Images\Breeds\Poodle\" />
    <Folder Include="Images\Breeds\WelshTerrier\" />
    <Folder Include="Images\Breeds\StBernard\" />
  </ItemGroup>

</Project>
